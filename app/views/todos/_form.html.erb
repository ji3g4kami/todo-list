<div class="container">
  <% if @todo.errors.present? %>
  <ul>
    <% @todo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
  <% end %>
</div>
<div class="container">
  <%= form_for @todo do |f| %>
  <div class="form-group">
    <%= f.label :name, "Task name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :due_date, "Due Date" %>
    <%= f.text_field :due_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :note, "Note" %>
    <%= f.text_area :note, rows: 4, class: "form-control" %>
  </div>
  <%= link_to "Back to Index", todos_path, class: "btn btn-md btn-primary"%>
  <%= f.submit class: "btn btn-md btn-primary"%>
  <% end %>
</div>